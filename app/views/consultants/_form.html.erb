<%= form_for @consultant, :html => { :class => 'form-horizontal' } do |f| %>
<% if current_user.manager? %>

  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :last_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :last_name, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :user_id, :class => 'control-label' %>
    <div class="controls">
    <%= select_tag('consultants[user_id.email][]', options_for_select(User.all.map {|x| [x.email, x.id] }), :multiple => true)  %>
    </div>
    </div>

  <div class="control-group">
    <%= f.label :phone_number, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :phone_number, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :sec_phone, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :sec_phone, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :fax_number, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :fax_number, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :address, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :address, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :email_other, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :email_other, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :email_spi, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :email_spi, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :geo_expertise, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :geo_expertise, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :subject_expertise, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :subject_expertise, :class => 'text_field' %>
    </div>
  </div>

  <% if current_user.inside? %>

  <div class="control-group">
    <%= f.label :spi_notes, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :spi_notes, :class => 'text_area' %>
    </div>
  </div>

  <% if current_user.manager? %>

  <div class="control-group">
    <%= f.label :cost, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :cost, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :start_date, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :start_date, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :aff_dl, :class => 'control-label' %>
    <div class="controls">
    <%= select('consultant', :aff_dl, 
      [['Yes', 'Yes'], 
      ['No', 'No']]) %>
    </div>
  </div> 


<div class="control-group">
    <%= f.label :contract, :class => 'control-label' %>
    <div class="controls">
    <%= select('consultant', :contract, 
      [['Signed contract on file', 'Signed'], 
      ['No contract on file', 'Not signed']]) %>
    </div>
  </div> 


  <div class="control-group">
    <%= f.label :contacts_input, :class => 'control-label' %>
    <div class="controls">
    <%= select('consultant', :contacts_input, 
      [['Consultant has listed contacts', 'Contacts in'], 
      ['No contacts listed yet', 'Contacts not in']]) %>
    </div>
  </div> 

  <div class="control-group">
    <%= f.label :resume, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :resume, :class => 'text_field', :label => "Resume year" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :admin_notes, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :admin_notes, :class => 'text_area' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                consultants_path, :class => 'btn' %>
  </div>

  <% else %>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                consultants_path, :class => 'btn' %>
  </div>
  <% end %>

  <% else %>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                consultants_path, :class => 'btn' %>
  </div>
  <% end %>
  
<% end %>

 <%= "You must be a manger to add consultants" %>
 <% end %>

